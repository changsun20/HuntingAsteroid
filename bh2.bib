	journal = {The Astrophysical Journal},
	author = {Gou, Lijun and McClintock, Jeffrey E. and Steiner, James F. and Narayan, Ramesh and Cantrell, Andrew G. and Bailyn, Charles D. and Orosz, Jerome A.},
